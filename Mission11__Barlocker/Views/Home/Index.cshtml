@{
    ViewData["Title"] = "Home";
}
@model List<Book>

<h1 >Online Bookstore</h1>
<br/>
<div class="container">
    <div class="row">
        @foreach (var b in Model)
        {
            <div class="col-md-4">
                <div class="book-tile">
                    <h4>Title: @b.Title</h4>
                    <p>Author: @b.Author</p>
                    <p>Publisher: @b.Publisher</p>
                    <p>ISBN: @b.ISBN</p>
                    <p>Classification/Category: @b.Classification</p>
                    <p>Number of Pages: @b.PageCount</p>
                    <p>Price: $@b.Price</p>
                </div>
            </div>
        }
    </div>
    <div class="row justify-content-center">
        <div class="col-12">
            @if (Model.Count > 0)
            {
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        @if (ViewBag.HasPreviousPage)
                        {
                            <li class="page-item"><a class="page-link" href="?pageNumber=@(ViewBag.PageNumber - 1)">Previous</a></li>
                        }
                        @for (var i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.PageNumber ? "active" : "")"><a class="page-link" href="?pageNumber=@i">@i</a></li>
                        }
                        @if (ViewBag.HasNextPage)
                        {
                            <li class="page-item"><a class="page-link" href="?pageNumber=@(ViewBag.PageNumber + 1)">Next</a></li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>